<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name = "ru.i.sys.labs.service" level = "info" />
    <logger name = "ru.i.sys.labs.serviceDAO" level = "info" />
    <logger name = "ru.i.sys.labs.exception" level = "info" />
    <logger name = "ru.i.sys.labs.repository" level = "info" />

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>